{
  "name": "XeroGap-AI-website",
  "version": "1.0.5",
  "private": true,
  "scripts": {
    "dev": "next dev --port 4010",
    "build": "npm run version:update && next build",
    "build:vercel": "npm run version:update && next build --no-lint",
    "version:update": "node update-version.mjs",
    "start": "next start",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "type-check": "echo 'TypeScript type checking disabled - using typescript.ignoreBuildErrors: true in next.config.ts'",
    "type-check:skip": "echo 'TypeScript type checking skipped - using typescript.ignoreBuildErrors: true'",
    "migrate:contacts": "node scripts/migrate-contacts.mjs",
    "migrate:supabase": "node scripts/migrate-contacts-supabase.mjs",
    "test:db": "node scripts/test-database.mjs",
    "test:supabase": "node scripts/test-supabase.mjs",
    "test:supabase:local": "node scripts/test-supabase-simple.mjs",
    "setup:postgres": "node scripts/setup-vercel-postgres.mjs",
    "setup:supabase": "node scripts/setup-supabase.mjs",
    "test": "npm run test:regression",
    "test:ui": "npx playwright test",
    "test:api": "bash scripts/test-apis.sh",
    "test:regression": "bash scripts/run-regression-tests.sh",
    "test:ui:headed": "npx playwright test --headed",
    "test:ui:debug": "npx playwright test --debug",
    "test:ui:report": "npx playwright show-report",
    "preview": "next build && next start",
    "clean": "rm -rf .next out test-results playwright-report",
    "analyze": "ANALYZE=true npm run build",
    "generate-secrets": "node scripts/generate-secrets.mjs"
  },
  "dependencies": {
    "@azure/identity": "^4.12.0",
    "@heroicons/react": "^2.2.0",
    "@microsoft/microsoft-graph-client": "^3.0.7",
    "@supabase/supabase-js": "^2.57.4",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@vercel/postgres": "^0.10.0",
    "autoprefixer": "^10.4.21",
    "bcryptjs": "^3.0.2",
    "framer-motion": "^12.23.13",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.544.0",
    "next": "15.5.3",
    "nodemailer": "^7.0.6",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.55.0",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.5.3",
    "tailwindcss": "^4",
    "typescript": "^5",
    "vercel": "^48.1.1"
  }
}
