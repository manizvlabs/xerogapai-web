{
  "name": "zero-website",
  "version": "1.0.1",
  "private": true,
  "scripts": {
    "dev": "next dev --port 4010",
    "build": "npm run version:update && next build",
    "build:vercel": "npm run version:update && mv tsconfig.json tsconfig.json.bak 2>/dev/null || true && next build --no-lint && mv tsconfig.json.bak tsconfig.json 2>/dev/null || true",
    "version:update": "node scripts/update-version.mjs",
    "start": "next start",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "type-check": "tsc --noEmit",
    "type-check:skip": "echo 'TypeScript type checking skipped - using typescript.ignoreBuildErrors: true'",
    "test": "npm run test:regression",
    "test:ui": "npx playwright test",
    "test:api": "bash scripts/test-apis.sh",
    "test:regression": "bash scripts/run-regression-tests.sh",
    "test:ui:headed": "npx playwright test --headed",
    "test:ui:debug": "npx playwright test --debug",
    "test:ui:report": "npx playwright show-report",
    "preview": "next build && next start",
    "clean": "rm -rf .next out test-results playwright-report",
    "analyze": "ANALYZE=true npm run build"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@vercel/postgres": "^0.10.0",
    "autoprefixer": "^10.4.21",
    "bcryptjs": "^3.0.2",
    "framer-motion": "^12.23.13",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.544.0",
    "next": "15.5.3",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.55.0",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.5.3",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
